generator client {
  provider = "prisma-client-js"
  output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id         String       @id @default(uuid())
  username   String       @unique
  email      String       @unique
  password   String
  cronJobs   CronJob[]
  createdAt  DateTime     @default(now())
  ResetToken ResetToken[]
}

model CronJob {
  id             String   @id @default(uuid())
  title          String
  url            String
  cronSchedule   String
  active         Boolean
  previousEvents Event[]
  isFailed       Boolean  @default(false)
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  createdAt      DateTime @default(now())
}

model Event {
  id        String      @id @default(uuid())
  cronJobId String
  cronJob   CronJob     @relation(fields: [cronJobId], references: [id])
  time      DateTime
  status    EventStatus
  createdAt DateTime    @default(now())
}

enum EventStatus {
  SUCCESS
  FAILURE
  PENDING
}

model ResetToken {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  email     String
  token     String
  expiresAt DateTime
}